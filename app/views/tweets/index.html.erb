<section class="home">
    <div class="home-container">
      <div class="text-focus-in">Vase</div>
      <div class="search-box">
        <%= form_tag({controller:"tweets",action:"index"}, method: :get) do %>
          <div class="input-group">
          <%= text_field_tag :search, params[:search], placeholder: "キーワード検索", class: "form-control" %>
          <span class="input-group-btn">
              <%= button_tag "検索", :name => nil, class: "btn btn-info" %>
          </span>
          </div>
        <% end %>
      </div>
      <div class="menu-container">
          <div class="about-box">
            
          </div>
          <div class="article-box">
         
          
          </div>
          <div class="season-menu-box">
          
          </div>
          <div class="new-post-box">
          
          </div>
          <div class="mypage-box">
          
          </div>
      </div>
    </div>
</section>

  


<div class="scroll-bg-content">
 
  <div class="scroll-bg bg-color04">
    <div id="page-box">
      <%= page_entries_info @tweets %>
    </div>
  
      <% @tweets.each do |t| %>
  
        <div class="tweet">
            <a href="/users/<%= t.user.id %>"><%= t.user.name %></a>
            <br>
            <div class="tweet-image-box">
              <% if t.image.present? %>
              <%= link_to tweet_path(t.id) do %>
                <%= image_tag t.image_url, size: '300x200'  %>
              <% end %>
              <% else %>
              <%= link_to tweet_path(t.id) do %>
                <img src="/images/default.jpg" width="200px" height="200px">
              <% end %>
              <% end %> 
            </div>
            <div class="tweet-title-box">
              <% if t.title.present? %>
              <%= t.title %>
              <% else %>
              <a>タイトルなし</a>
              <% end %>
            </div>
            <div class="tweet-info-item">
              ✿<%= t.liked_users.count %>
              <%= link_to "詳細へ", tweet_path(t.id) ,class: 'btn btn-info'%>
              
            </div>
        </div>
      <% end %>
  </div>
</div>
<div id="page-box">
<%= paginate @tweets %>
</div>
<%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
  <br>
  <%= link_to "マイページ", users_show_path %>


<%= javascript_pack_tag 'tweets/index' %>






