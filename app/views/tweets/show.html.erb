<%= link_to "ホームに戻る", tweets_path, class: 'btn btn-info' %>
<div class="show-tweet-container">
  <div class="tweet-top">
    <div class="user-name-box">
    
      <a><%= @tweet.user.name %>
    </div>
    <div class="tweet-image-box2">
      <%= image_tag @tweet.image_url, size: '600x400'  %>
    </div>
    <div class="tweet-title">
      <a><%= @tweet.title %></a>
    </div>
  </div>
  <div class="material-box">
    <a>・使用したお花・</a>
    <br>
    <a><%= @tweet.material %></a>
  </div>
  <div class="tag-box">
    <a>・季節・</a>
    <br>
    <% @tweet.tags.each do |tag| %>
    <%= tag.name %>
    <% end %>
  </div>

  <div class="tweet-body-box">
    <a>・説明・</a>
    <br>
    <a><%= @tweet.body %></a>
    <a><%= @tweet.created_at %></a>
  </div>
  

  <div class="like-box">
    <div class="like-do-box">
      
      <a>✿ <%= @tweet.likes.count %></a>
      <% if current_user.already_liked?(@tweet) %>
      <%= button_to 'いいねを取り消す', tweet_like_path(@tweet), method: :delete %>
      <i class="far fa-smile like-btn"></i>
      <% else %>
      <%= button_to 'いいね', tweet_likes_path(@tweet) %>
      <i class="far fa-smile like-btn"></i>
      <% end %>
    </div>

  

    <div class="like-show-box">
      <a>いいねしたユーザー</a>
      <% @tweet.liked_users.each do |user| %>
      <li><%= user.name %></li>
      <% end %>
    </div>
  </div>
  
  
  
</div>


